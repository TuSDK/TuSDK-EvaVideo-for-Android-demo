<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaPlayActivity">

    <org.lasque.tusdk.core.seles.output.SelesView
        android:id="@+id/lsq_seles"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </org.lasque.tusdk.core.seles.output.SelesView>

    <LinearLayout
        android:id="@+id/lsq_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/lsq_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置资源"
            />

        <Button
            android:id="@+id/lsq_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载"
            />

        <Button
            android:id="@+id/lsq_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放"
            />

        <Button
            android:id="@+id/lsq_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lsq_control"
        >

        <Button
            android:id="@+id/lsq_replace_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            />

        <Button
            android:id="@+id/lsq_replace_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            />

        <Button
            android:id="@+id/lsq_replace_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文本"
            />

        <Button
            android:id="@+id/lsq_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            />
    </LinearLayout>


    <SeekBar
        android:id="@+id/lsq_seek"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />

</RelativeLayout>
