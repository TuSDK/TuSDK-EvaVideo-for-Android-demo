<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="2dp"
    android:background="@drawable/item_editor_bg">

    <ImageView
        android:id="@+id/lsq_editor_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lsq_editor_icon_num"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:alpha="0.9"
        android:background="@drawable/item_editor_image_num_bg"
        android:gravity="center"
        android:lineHeight="15dp"
        android:minWidth="20dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="1"
        android:textColor="@color/lsq_color_white"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="@id/lsq_editor_icon"
        app:layout_constraintTop_toTopOf="@id/lsq_editor_icon" />

    <TextView
        android:id="@+id/lsq_editor_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/item_editor_mask_bg"
        android:drawableTop="@mipmap/style_edit"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/style_edit"
        android:text="点击编辑"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lsq_editor_highlight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>