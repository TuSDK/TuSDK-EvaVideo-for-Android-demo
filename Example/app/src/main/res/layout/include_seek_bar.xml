<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitStart"
        android:paddingRight="10dp"
        android:id="@+id/lsq_video_to_first_frame"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:src="@mipmap/first_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="10dp" />

    <ImageView
        android:scaleType="fitEnd"
        android:paddingLeft="10dp"
        android:id="@+id/lsq_video_to_last_frame"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:src="@mipmap/last_ic"
        app:layout_constraintBottom_toBottomOf="@id/lsq_video_to_first_frame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lsq_video_to_first_frame" />

    <TextView
        android:text=""
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/lsq_color_white"
        app:layout_constraintBottom_toBottomOf="@id/lsq_video_to_first_frame"
        app:layout_constraintTop_toTopOf="@id/lsq_video_to_first_frame"
        app:layout_constraintRight_toLeftOf="@id/lsq_video_to_last_frame"
        app:layout_constraintLeft_toRightOf="@id/lsq_video_to_first_frame"
        android:id="@+id/lsq_video_playing_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>