<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="18dp">

    <ImageView
        android:id="@+id/lsq_model_icon"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lsq_model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:lineHeight="6dp"
        android:text="111111111111111"
        android:textColor="@color/lsq_color_white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/lsq_model_icon"
        app:layout_constraintTop_toBottomOf="@id/lsq_model_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>