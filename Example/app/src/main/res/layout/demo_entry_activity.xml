<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/lsq_title"
        android:textColor="@color/lsq_color_white"
        android:textSize="17sp"
        android:text="@string/lsq_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/lsq_default_bg"
        app:layout_constraintTop_toBottomOf="@id/lsq_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/lsq_model_list"
        android:layout_width="0dp"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_title"
        app:layout_constraintRight_toRightOf="@id/lsq_title"
        app:layout_constraintTop_toTopOf="@id/lsq_title"
        android:id="@+id/lsq_to_network_model"
        android:text="@string/lsq_network_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>