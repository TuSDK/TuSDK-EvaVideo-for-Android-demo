<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="12dp"
    android:background="@color/lsq_icon_set_color">

    <ImageView
        android:id="@+id/lsq_model_icon"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lsq_model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:lineHeight="6dp"
        android:text="111111111111111"
        android:textColor="@color/lsq_color_white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/lsq_model_icon"
        app:layout_constraintTop_toBottomOf="@id/lsq_model_icon" />

    <ImageView
        android:id="@+id/lsq_model_download"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/download_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/lsq_model_pre_loading"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:scaleType="centerInside"
        android:src="@mipmap/pre_downloading_ic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/lsq_download_progress"
        style="@style/LsqProgress"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:max="100"
        android:min="0"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></ProgressBar>

    <TextView
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowRadius="10"
        android:shadowColor="@color/black"
        android:id="@+id/lsq_progress_total_bytes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="right|center_vertical"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/lsq_download_progress"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowRadius="1"
        android:shadowColor="@color/lsq_color_item_select_back"
        android:id="@+id/lsq_progress_current_bytes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text=""
        android:textColor="@color/lsq_album_item_select_back"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/lsq_progress_total_bytes"
        app:layout_constraintRight_toLeftOf="@id/lsq_progress_total_bytes"
        app:layout_constraintTop_toTopOf="@id/lsq_progress_total_bytes" />

</androidx.constraintlayout.widget.ConstraintLayout>