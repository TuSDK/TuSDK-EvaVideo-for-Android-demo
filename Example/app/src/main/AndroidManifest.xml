<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.lsque.tusdkevademo">

    <application
        android:requestLegacyExternalStorage="true"
        android:name=".TuApplication"
        android:allowBackup="true"
        android:appComponentFactory="@string/app_name"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_permission_config"
        tools:replace="android:appComponentFactory">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModelDetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:usesCleartextTraffic="true"
            android:name=".ModelVideoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ImageCuterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AlbumActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AudioListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/Transparent"/>
        <activity
            android:name=".MovieCuterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ModelEditorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".NetworkModelExampleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".EVAModelFileExplorerActivity" />
        <activity android:name=".EVAFileLoaderActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="*/*"/>
                <data android:scheme="file"/>
                <data android:scheme="content"/>
                <data android:host="*"/>
                <data android:pathPattern=".*\\.eva" />
                <data android:pathPattern=".*\\..*\\.eva" />
                <data android:pathPattern=".*\\..*\\..*\\.eva" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.eva" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.eva" />
            </intent-filter>
        </activity>
        <activity android:name=".DynamicModelActivity" />
        <activity android:name=".DynamicModelEditorActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".albumselect.AlbumSelectActivity" />

        <service android:name=".server.EVARenderServer" android:process=":render" />
        <service android:name=".server.DYNEVARenderServer"  android:process=":dynrender"/>
    </application> <!-- 获取WIFI信息 -->
    <uses-feature android:name="android.hardware.camera" /> <!-- 允许应用程序写数据到外部存储设备（主要是SD卡） -->
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" /> <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" /> <!-- 开启闪光灯权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 访问麦克风 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 位置信息 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 允许访问GPS -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" /> <!-- 读取本机信息 -->

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

</manifest>